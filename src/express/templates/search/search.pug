include ../shared/header
include ../ticket/ticket-card

include ../shared/layout
  +header(true)
  main.page-content
    section.search-results
      h1.visually-hidden Результаты поиска
      .search-results__wrapper
        if true
          p.search-results__label Найдено
            span.js-results 2 публикации
            ul.search-results__list
              each item in [{title: 'Ленд Ровер', categories: ['Авто'], label: 'Продам', price: 900000, description: 'Куплю монстеру зеленую в хорошем зеленом состоянии, буду поливать...', imageSrc: {main: '../src/express/public/img/item05.jpg', retina: '../src/express/public/img/item05@2x.jpg 2x'}, color: '05'}, {title: 'Хонда', categories: ['Авто'], label: 'Продам', price: 100000, description: 'Куплю монстеру зеленую в хорошем зеленом состоянии, буду поливать...', imageSrc: {main: '../src/express/public/img/item16.jpg', retina: '../src/express/public/img/item16@2x.jpg 2x'}, color: '16'}]
                li.search-results__item
                  +ticket-card({title: item.title, categories: item.categories, label: item.label, price: item.price, description: item.description, imagesrc: item.imagesrc, color: item.color})
        else
          p Не найдено
            br
            | ни одной публикации

    section.tickets-list
      h2.visually-hidden Самые новые предложения
      .tickets-list__wrapper
        .tickets-list__header
          p.tickets-list__title Самое свежее
          a.tickets-list__link(href='#') Еще 25
        ul
          each item in [{title: 'Монстера', categories: ['Дом'], label: 'Куплю', price: 1000, description: 'Куплю монстеру зеленую в хорошем зеленом состоянии, буду поливать...', imageSrc: {main: '../src/express/public/img/item01.jpg', retina: '../src/express/public/img/item01@2x.jpg 2x'}, color: '01'}, {title: 'Мое старое кресло', categories: ['Дом'], label: 'Продам', price: 4000, description: 'Продам свое старое кресло, чтобы сидеть и читать книги зимними...', imageSrc: {main: '../src/express/public/img/item02.jpg', retina: '../src/express/public/img/item02@2x.jpg 2x'}, color: '02'}]
            li.tickets-list__item
              +ticket-card({title: item.title, categories: item.categories, label: item.label, price: item.price, description: item.description, imagesrc: item.imagesrc, color: item.color})
include ../shared/footer
